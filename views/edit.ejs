<link rel="stylesheet" href="/css/edit.css">
<h1>Editing <%= filename %></h1>
<div id="edit-container">
    <textarea id="edit-input" cols="1" rows="1" wrap="hard"></textarea>
    <div id="rendered"></div>
</div>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
    document.getElementById("edit-input").addEventListener("input", ev =>
        document.getElementById("rendered").innerHTML = marked(ev.target.value))
</script>
